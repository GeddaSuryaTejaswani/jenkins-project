pipeline {
    agent any

    stages {

        stage('Checkout from Git') {
            steps {
                git 'https://github.com/GeddaSuryaTejaswani/jenkins-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image..."
                    sh 'docker build -t my-jenkins-app .'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    echo "Running Docker container..."
                    sh 'docker run -d --name myapp my-jenkins-app'
                }
            }
        }
    }

    post {
        success {
            echo "Build completed successfully!"
            mail to: 'your-email@example.com',
                 subject: 'Jenkins Build Successful',
                 body: 'Your Jenkins pipeline has completed successfully.'
        }
        failure {
            echo "Build failed!"
            mail to: 'your-email@example.com',
                 subject: 'Jenkins Build Failed',
                 body: 'Your Jenkins pipeline has failed. Please check the logs.'
        }
    }
}

